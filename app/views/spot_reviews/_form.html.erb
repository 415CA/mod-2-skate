<%= form_for @spot_review do |f| %>
  <% if @spot_review.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@spot_review.errors.count, "error") %>
        prohibited this spot_review from being saved:
      </h2>
  
      <ul>
      <% @spot_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <b> <%= f.label :title %></b>
  <%= f.text_field :title %>
  <br>
  <br>
  <b> <%= f.label :content %> </br>
  <%= f.text_area :content %>
  <br>
  <br>
  <b> <%= f.label :rating %> 
  <%= f.text_field :rating %>
  </br>
  </br>
  <%= f.submit "Create Review" %>
<% end %>