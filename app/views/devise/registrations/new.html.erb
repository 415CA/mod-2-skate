<main class="pa4 black-80 measure center">
  <legend class="f4 fw6 ph0 mh0">Sign Up</legend>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, :class => "db fw6 lh-copy f6" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>
  
  <div class="field">
    <%= f.label :name, :class => "db fw6 lh-copy f6" %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="field">
    <%= f.label :age, :class => "db fw6 lh-copy f6" %><br />
    <%= f.number_field :age, autofocus: true, autocomplete: "age", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

<div class="field">
    <%= f.label :bio, :class => "db fw6 lh-copy f6" %><br />
    <%= f.text_area :bio, autofocus: true, autocomplete: "bio", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="field">
    <%= f.label :borough, :class => "db fw6 lh-copy f6" %><br />
    <%= f.text_field :borough, autofocus: true, autocomplete: "borough", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="field">
    <%= f.label :password, :class => "db fw6 lh-copy f6" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, :class => "db fw6 lh-copy f6" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => "pa2 input-reset ba bg-transparent hover-bg-black hover-white w-100" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up", :class => "b ph3 pv2 input-reset ba b--black bg-transparent grow pointer f6 dib" %>
  </div>
  <% end %>
  <div class="lh-copy mt3">
    <%= render "devise/shared/links" %>
  </div>
</main>
