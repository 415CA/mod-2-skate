    <div id="error_explanation">
      <h2>
        <%= pluralize(@shop_review.errors.count, "error") %>
        prohibited this park_review from being saved:
      </h2>
  
      <ul>
      <% @shop_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
  <% end %>
      </ul>
    </div>
<% end %>

<main class="pa4 black-80 center measure">
  <form class="measure">
  <%= form_with model: @shop_review do |f| %>
