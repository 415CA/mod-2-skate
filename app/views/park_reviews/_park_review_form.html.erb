<h3>Review Form</h3>
<%= form_for @park_review do |f| %>
  <% if @park_review.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@park_review.errors.count, "error") %>
        prohibited this park_review from being saved:
      </h2>
  
      <ul>
      <% @park_review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
   <% end %>
      </ul>
    </div>
 <% end %>
  
  <%= form_with model: @park_review do |f| %>
  <b>Username: </b> <%= current_user.name %> <br>
    
  <%= f.hidden_field :user_id, value:current_user.id %>
  <b>Park: </b><br>
    <%= f.collection_select :skate_park_id, SkatePark.all, :id, :name %><br><br>

    <b><%= f.label :title %></b><br>
     <%= f.text_field :title %>
      <br>
   
    <b> <%= f.label :content %> </b><br>
    <%= f.text_area :content %>
      <br>
    
    <b> <%= f.label :rating %></b><br>
    <%= f.text_field :rating %> 
     <br>
      <br>
   

  <%= f.submit "Create Review" %>
  <% end %>
<% end %>