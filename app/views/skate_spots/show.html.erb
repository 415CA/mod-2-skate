<h1>Skate Spot</h1>
<h2> <%=@skate_spot.name %> </h2>
<% if user_signed_in? %> 
  <%= link_to 'Add to Favorites', new_user_skate_spot_path %>
<% end %>
<br>
Address: <%=@skate_spot.address %>
<br>
Borough: <%=@skate_spot.borough %>
<br>
Rating: <%= @skate_spot.rating%>
<br>
Description: <%= @skate_spot.description %>
<br>
Map:
<br>
<iframe src="<%= @skate_spot.google_map %>" width="400" height="300" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
<hr>
<h3>Reviews</h3>
<%@skate_spot.spot_reviews.each do |review|%>
  <div class="container">
    <b><%= link_to review.user.name, user_path(review)%>:</b>
    <%= review.title%>/
    <b>rating:</b><%= review.rating%><br>
    <%= review.content %></p>
  <% if review.user == current_user %>
    <%= button_to "delete", "/spot_reviews/#{review.id}", method: :delete %>
  <% end %>
</div>
<%end%>

<% if user_signed_in? %>
  <%= link_to "Review Spot", new_spot_review_path, :class => "button" %></p>
<% end %>
